{
  "manifest_version": 3,
  "name": "Red Dot Projector & Eye Replace Extension",
  "version": "1.1",
  "description": "Projects a red dot and detects the nearby word, and includes eye replacement features.",
  "permissions": [
    "activeTab",
    "identity",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/socket.io.min.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/socket.io.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "156299842580-5t4qij9fc569ef6c9pevr2ukku7gb4f2.apps.googleusercontent.com",
    "scopes": ["profile", "email"]   
  }   
}
