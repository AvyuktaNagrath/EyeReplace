{
    "manifest_version": 3,
    "name": "Red Dot Projector & Eye Replace Extension",
    "version": "1.1",
    "description": "Projects a red dot and detects the nearby word, and includes eye replacement features.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  