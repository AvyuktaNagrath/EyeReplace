{
  "manifest_version": 3,
  "name": "Red Dot Projector",
  "version": "1.1",
  "description": "Projects a red dot and detects the nearby word.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
  }
}
